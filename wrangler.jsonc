{
    "$schema": "node_modules/wrangler/config-schema.json",
    "name": "podcast-api",
    "main": "src/index.ts",
    "compatibility_date": "2025-08-03",
    "observability": {
        "enabled": true
    },
    "preview_urls": false,
    "assets": { "directory": "./public/", "binding": "ASSETS" },
    "r2_buckets": [
        {
            "binding": "R2_PODCAST",
            "bucket_name": "adonix-audio",
            "preview_bucket_name": "adonix-audio"
        }
    ]
}
